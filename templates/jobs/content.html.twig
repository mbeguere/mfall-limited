<div class="position-fixed w-50">
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">{{ job.title }}</h5>
			<p class="card-text" style="font-size: 20px;">{{ job.company.name }}
				-
				<i class="fas fa-map-marker-alt text-info"></i>
				{{job.location}}</p>
			<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Apply</a>
		</div>
	</div>
	<div class="content border rounded-bottom p-4" style="font-size: 18px;">
		{{ html_entity_decode(job.content) | raw }}</div>
</div>
{# Modal #}
{% include "apply/form.html.twig" with {'job': job}%}
